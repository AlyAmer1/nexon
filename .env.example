# Mongo connection used by both REST & gRPC
NEXON_MONGO_URI=mongodb://localhost:27017
NEXON_MONGO_DB=onnx_platform

# gRPC server defaults
GRPC_BIND=[::]:50051
GRPC_GRACE_SECONDS=5

# Cache defaults (in-process; no expiry; verbose logs)
MODEL_CACHE_TTL=0
MODEL_CACHE_LOG=1

# In order for tools like grpcurl to discover the gRPC API at runtime.
ENABLE_REFLECTION=1